<div>
  <h2 class="mt-6 text-3xl font-extrabold text-gray-700">
    Recruiting Dashboard
  </h2>
</div>

<div class="flex w-full space-x-8 sm:flex-col md:flex-row flex-1">
  <div id="applicants-chart" class="sm:w-full md:w-1/2">
    <%= turbo_frame_tag "applicants_chart", src: chart_path(chart_type: "Charts::ApplicantsChart"), loading: "lazy" %>
  </div>
  <div id="hiring-stages-chart" class="sm:w-full md:w-1/2">
    <%= turbo_frame_tag "hiring_stages_chart", src: chart_path(chart_type: "Charts::HiringStagesChart"), loading: "lazy" %>
  </div>
</div>
